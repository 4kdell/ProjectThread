@{
    ViewData["Title"] = "Login";
    Layout = "Auth_Layout";
}

<div class="d-flex justify-content-center" style="min-height: 80vh; padding-top: 30px;">
    <div class="w-75 p-4  rounded bg-white">
        
        <!-- Simple related content block -->
        <div class="mb-4 text-center">
            <h4 class="text-primary fw-semibold">Welcome to Project Thread</h4>
            <p class="text-muted mb-3">
                Please login to start chatting with your friends and explore new conversations.
            </p>
        </div>

        <!-- Original login heading and form -->
        <h2 class="text-center mb-4">User Login</h2>
        @if (ViewBag.Error != null)
        {
            <div class="alert alert-danger mt-3">@ViewBag.Error</div>
        }
        <form asp-controller="Auth" asp-action="Login" method="post">
            <div class="form-group mb-3">
                <label for="Email" class="form-label">Email</label>
                <input type="email" name="Email" class="form-control" required />
            </div>
            <div class="form-group mb-3">
                <label for="Password" class="form-label">Password</label>
                <input type="password" name="Password" class="form-control" required />
            </div>
            <button type="submit" class="btn btn-primary w-100">Login</button>
        </form>
    </div>
</div>
