@model ProjectThread.Models.User

@{
    ViewData["Title"] = "User Profile";
}

<div class="container mt-5">
    <div class="row">
        <div class="col-lg-12 col-md-8 mx-auto">

            <!-- Profile Card -->
            <div class="card shadow rounded-4 mb-4">
                <div class="card-header bg-primary text-white text-center rounded-top-4">
                    <h4 class="mb-0">My Profile</h4>
                </div>
                <div class="card-body">
                    <dl class="row">
                        <dt class="col-sm-5">Full Name</dt>
                        <dd class="col-sm-7">@Model.Name</dd>

                        <dt class="col-sm-5">Email</dt>
                        <dd class="col-sm-7">@Model.Email</dd>

                        <dt class="col-sm-5">Phone</dt>
                        <dd class="col-sm-7">@Model.Phone</dd>

                        <dt class="col-sm-5">Gender</dt>
                        <dd class="col-sm-7">@Model.Gender</dd>

                        <dt class="col-sm-5">Date of Birth</dt>
                        <dd class="col-sm-7">@Model.Dob?.ToString("dd MMM yyyy")</dd>

                        <dt class="col-sm-5">Address</dt>
                        <dd class="col-sm-7">@Model.Address1</dd>

                        <dt class="col-sm-5">City</dt>
                        <dd class="col-sm-7">@Model.City</dd>

                        <dt class="col-sm-5">State</dt>
                        <dd class="col-sm-7">@Model.State</dd>

                        <dt class="col-sm-5">Country</dt>
                        <dd class="col-sm-7">@Model.Country</dd>

                        <dt class="col-sm-5">Registered On</dt>
                        <dd class="col-sm-7">@Model.CreatedOn.ToString("dd MMM yyyy hh:mm tt")</dd>
                    </dl>
                    <div class="text-end">
                        <a asp-controller="Users" asp-action="Editor" asp-route-id="@Model.UserGUID" class="btn btn-outline-primary">
                            Edit Profile
                        </a>
                    </div>
                </div>
            </div>

            <!-- Instructions Card -->
            <div class="card shadow rounded-4">
                <div class="card-header bg-success text-white text-center rounded-top-4">
                    <h5 class="mb-0">Instructions</h5>
                </div>
                <div class="card-body">
                    <ul class="list-unstyled mb-0">
                        <li>✔ Keep your profile information up to date.</li>
                        <li>✔ Use a valid email address for communication.</li>
                        <li>✔ Your profile visibility depends on your privacy settings.</li>
                        <li>✔ Contact support if you face any issues updating details.</li>
                    </ul>
                </div>
            </div>

        </div>
    </div>
</div>





