@model ProjectThread.Models.User

@{
    ViewData["Title"] = "User Profile";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow rounded">
                <div class="card-header bg-primary text-white text-center">
                    <h4>My Profile</h4>
                    <h4>@ViewData["ClaimName"]</h4>
                     <h4>@ViewData["ClaimId"] </h4> 
                </div>
                <div class="card-body">
                    <dl class="row">
                        <dt class="col-sm-4">Full Name</dt>
                        <dd class="col-sm-8">@Model.Name</dd>

                        <dt class="col-sm-4">Email</dt>
                        <dd class="col-sm-8">@Model.Email</dd>

                        <dt class="col-sm-4">Phone</dt>
                        <dd class="col-sm-8">@Model.Phone</dd>

                        <dt class="col-sm-4">Gender</dt>
                        <dd class="col-sm-8">@Model.Gender</dd>

                        <dt class="col-sm-4">Date of Birth</dt>
                        <dd class="col-sm-8">@Model.Dob?.ToString("dd MMM yyyy")</dd>

                        <dt class="col-sm-4">Address</dt>
                        <dd class="col-sm-8">@Model.Address1</dd>

                        <dt class="col-sm-4">City</dt>
                        <dd class="col-sm-8">@Model.City</dd>

                        <dt class="col-sm-4">State</dt>
                        <dd class="col-sm-8">@Model.State</dd>

                        <dt class="col-sm-4">Country</dt>
                        <dd class="col-sm-8">@Model.Country</dd>

                        <dt class="col-sm-4">Registered On</dt>
                        <dd class="col-sm-8">@Model.CreatedOn.ToString("dd MMM yyyy hh:mm tt")</dd>
                    </dl>
                    <div class="text-end">
                        <a asp-controller="Users" asp-action="Editor" asp-route-id="@Model.UserGUID" class="btn btn-outline-primary">Edit Profile</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
